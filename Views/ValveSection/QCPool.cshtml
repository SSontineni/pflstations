@model IEnumerable<PipelineFeatureList.Models.ValveSectionQC>

@{
    ViewBag.Title = "QC";
}

<table width="100%">
    <tr>
        <th>
            @Html.Raw("Station Location")
        </th>
        <th>
            @Html.Raw("Station")
        </th>
        <th>
            @Html.Raw("Circuit")
        </th>
        <th>
            @Html.Raw("Status")
        </th>
        <th>
            @Html.Raw("Length")
        </th>
        <th>
            @Html.Raw("Features")
        </th>
        <th>
            @Html.Raw("QC")
        </th>
        <th>
            @Html.Raw("Builder")
        </th>
    </tr>

@foreach (var item in Model) {
    if (item.ValveSectionQCPool != null)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ValveSectionQCPool.PipeSystem.PipeSystemItem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValveSectionQCPool.Pipeline.PipelineItem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValveSectionQCPool.ValveSection.ValveSectionBegin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValveSectionQCPool.ValveStatus.ValveSectionStatusItem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValveSectionQCPool.Length)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValveSectionQCPool.NumberOfFeatures)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValveSectionQCPool.ReadyForQC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValveSectionQCPool.Builder.FirstName) @Html.DisplayFor(modelItem => item.ValveSectionQCPool.Builder.LastName)
            </td>
            <td>
                @Html.ActionLink("Overview", "", "Overview", new { ValveSectionID = item.ValveSectionQCPool.ValveSection.ValveSectionID, OrionStationSeries = item.ValveSectionQCPool.ValveSection.OrionStationSeries }, htmlAttributes: new { @class = "linkbutton" })
            </td>
        </tr>
    }
}

</table>
