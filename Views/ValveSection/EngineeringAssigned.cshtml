@model IEnumerable<PipelineFeatureList.Models.ValveSectionEngineering>

@{
    ViewBag.Title = "Engineering";
}

<table width="100%">
    <tr>
        <th>
            @Html.Raw("Station Location")
        </th>
        <th>
            @Html.Raw("Station")
        </th>
        <th>
            @Html.Raw("Circuit")
        </th>
        <th>
            @Html.Raw("Status")
        </th>
    </tr>

    
@foreach (var item in Model)
{
    if (item.ValveSectionEngineeringAssigned != null)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ValveSectionEngineeringAssigned.PipeSystem.PipeSystemItem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValveSectionEngineeringAssigned.Pipeline.PipelineItem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValveSectionEngineeringAssigned.ValveSection.ValveSectionItem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValveSectionEngineeringAssigned.ValveStatus.ValveSectionStatusItem)
            </td>
            <td>
                @Html.ActionLink("Overview", "", "Overview", new { ValveSectionID = item.ValveSectionEngineeringAssigned.ValveSection.ValveSectionID, OrionStationSeries = item.ValveSectionEngineeringAssigned.ValveSection.OrionStationSeries }, htmlAttributes: new { @class = "linkbutton" })
            </td>
        </tr>
    }
}
</table>
