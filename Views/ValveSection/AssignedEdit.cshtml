@model PipelineFeatureList.Models.ValveSection

@{
    ViewBag.Title = "Edit Valve Section";
}

<h2>Edit Valve Section</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>ValveSection</legend>

        @Html.HiddenFor(model => model.ValveSectionID)
        @Html.HiddenFor(model => model.BuilderID)
        @Html.HiddenFor(model => model.CreatedBy_UserID)
        @Html.HiddenFor(model => model.CreatedOn)
        @Html.HiddenFor(model => model.EngineerID)
        @Html.HiddenFor(model => model.FinalEngineerID)
        @Html.HiddenFor(model => model.QCID)
        @Html.HiddenFor(model => model.PFLLength)
        @Html.HiddenFor(model => model.ValveSectionStatusID)
        @Html.HiddenFor(model => model.PipeSystemID)
        @Html.HiddenFor(model => model.PipelineID)


        <table>
            <tr>
            <td><div class="editor-label">@Html.LabelFor(model => model.ValveSectionStatusID)</div></td>
            <td><div class="editor-field">@Html.Raw(ViewBag.ValveSectionStatusItem)</div></td>
            </tr>
            <tr>
            <td><div class="editor-label">@Html.LabelFor(model => model.PipeSystemID)</div></td>
            <td><div class="editor-field">@Html.Raw(ViewBag.PipeSystemItem)</div></td>
            </tr>
            <tr>
            <td><div class="editor-label">@Html.LabelFor(model => model.PipelineID)</div></td>
            <td><div class="editor-field">@Html.Raw(ViewBag.PipelineItem)</div></td>
            </tr>
            <tr>
            <td><div class="editor-label">@Html.LabelFor(model => model.CurrentMAOP)</div></td>
            <td><div class="editor-field">@Html.EditorFor(model => model.CurrentMAOP) @Html.ValidationMessageFor(model => model.CurrentMAOP)</div></td>
            </tr>
            <tr>
            <td colspan="2"><p><input type="submit" value="Save" /></p></td>
            </tr>
        </table>
        
    </fieldset>
}

<div>
    @Html.ActionLink("Back to Overview", "Index", "Overview", new { ValveSectionID = Model.ValveSectionID }, htmlAttributes: new { @class = "linkbutton" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    
}
