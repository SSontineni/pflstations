<!DOCTYPE html>
<html lang="en">
    <head>
        <script src="~/Scripts/jquery-1.7.1.js" type="text/javascript"></script>
        <script src="~/Scripts/jquery-1.7.1.min.js" type="text/javascript"></script>
        <script src="~/Scripts/jquery.maskedinput.js" type="text/javascript"></script>

        <meta charset="utf-8" />
        <title>@ViewBag.Title - Pipeline Feature List</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        @if (IsSectionDefined("CtrlJavascript"))
        {
            @RenderSection("CtrlJavascript");
        }
        
    </head>
    <body id="DSR">
        <header>
            <div class="content-DSR-wrapper">
                <div class="float-left">
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Close", null, null, new { id = "close" })</li>
                        </ul>
                    </nav>
                </div>
            </div>
            </div>
        </header>
        <div id="DSRbody">
            @RenderSection("featured", required: false)
            <section class="content-DSR-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - Pipeline Feature List</p>
                </div>
            </div>
        </footer>


        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
<script type="text/javascript">
    $("#close").click(function () { window.close(); });
</script>