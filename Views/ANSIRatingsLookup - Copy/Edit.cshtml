@model PipelineFeatureList.Models.ANSIRatingsLookup

@{
    ViewBag.Title = "Edit Rating Class";
}

<h2>Edit Rating Class</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>ANSIRating</legend>
        <table>
            <tr>
                <td>
                    @Html.HiddenFor(model => model.ANSIRatingID)

                    <div class="editor-label">
                        @Html.LabelFor(model => model.ANSIRatingItem)
                    </div>
                </td>
                <td>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.ANSIRatingItem)
                        @Html.ValidationMessageFor(model => model.ANSIRatingItem)
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    @Html.HiddenFor(model => model.ANSIRatingID)

                    <div class="editor-label">
                        @Html.LabelFor(model => model.PressureRating)
                    </div>
                </td>
                <td>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.PressureRating)
                        @Html.ValidationMessageFor(model => model.PressureRating)
                    </div>
                </td>
            </tr>
        </table>
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index", null, htmlAttributes: new { @class = "linkbutton" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
