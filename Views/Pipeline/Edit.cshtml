@model PipelineFeatureList.Models.Pipeline

@{
    ViewBag.Title = "Edit Station";
}

<h2>Edit Station</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Station</legend>

        @Html.HiddenFor(model => model.PipelineID)

        <table>
            <tr>
                <td>
                    @Html.LabelFor(model => model.PipelineItem)
                </td>
                <td>
                    @Html.EditorFor(model => model.PipelineItem)
                    @Html.ValidationMessageFor(model => model.PipelineItem)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.PipeSystemID)
                </td>
                <td>
                    @Html.DropDownList("PipeSystemID", "- Select a Pipe System -")
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Street)
                </td>
                <td>
                    @Html.EditorFor(model => model.Street)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.CrossStreet)
                </td>
                <td>
                    @Html.EditorFor(model => model.CrossStreet)
                </td>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Town)
                </td>
                <td>
                    @Html.EditorFor(model => model.Town)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Notes)
                </td>
                <td>
                    @Html.TextAreaFor(model => model.Notes)
                </td>
            </tr>
        </table>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index", null, htmlAttributes: new { @class = "linkbutton" })
</div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
