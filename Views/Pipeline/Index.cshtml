@model IEnumerable<PipelineFeatureList.Models.Pipeline>
@using PipelineFeatureList.Models;
@using System.Web.Mvc.Razor;

@{
    ViewBag.Title = "Stations";
}

<h2>Stations</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, htmlAttributes: new { @class = "linkbutton" }) @Html.ActionLink("Back to Admin", "Index", "Admin", null, htmlAttributes: new { @class = "linkbutton" })
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PipelineItem)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StationName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PipeSystem)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Town)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Street)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CrossStreet)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CircuitCount)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PipelineItem)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StationName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PipeSystem.PipeSystemItem)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Town)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Street)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CrossStreet)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CircuitCount)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.PipelineID }, htmlAttributes: new { @class = "linkbutton" })
            @Html.ActionLink("Details", "Details", new { id = item.PipelineID }, htmlAttributes: new { @class = "linkbutton" })
            @Html.ActionLink("Delete", "Delete", new { id = item.PipelineID }, htmlAttributes: new { @class = "linkbutton" })
        </td>
    </tr>
}
</table>
<div>
    @Html.ActionLink("Back to Admin", "Index", "Admin", null, htmlAttributes: new { @class = "linkbutton" })
</div>
