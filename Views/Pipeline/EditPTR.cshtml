@model PipelineFeatureList.Models.PressureTestRecord

@{
    ViewBag.Title = "Edit Document Record";
}

<h2>Edit Document Record</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <h1>
        Edit Pressure Test for Station @ViewBag.PipelineItem
    </h1>

    @Html.HiddenFor(model => model.PipelineID)
    @Html.HiddenFor(model => model.PressureTestRecordID)

    <table>
        <tr>
            <td>
                @Html.LabelFor(model => model.Filename)
            </td>
            <td class="medium">
                @Html.EditorFor(model => model.Filename)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.PTMinTestPressure)
            </td>
            <td>
                @Html.EditorFor(model => model.PTMinTestPressure)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.PTMedium)
            </td>
            @*<td>
                @Html.EditorFor(model => model.PTMedium)
            </td>*@

            <td>
                <div class="editor-field">
                    @Html.DropDownList("PTMedium", (SelectList)ViewBag.SelectedPTMediumID, new { id = "ddlPTMedium" })

                    

                </div>
                
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.PTDate)
            </td>
            <td>
                @*@Html.TextBox("Test Date", Model.PTDate, new { @class = "datepicker", @type = "date" })*@
                @Html.EditorFor(model => model.PTDate)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.PTDuration)
            </td>
            <td>
                @Html.EditorFor(model => model.PTDuration)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.InstDeadWtEval)
            </td>
            <td>
                @Html.EditorFor(model => model.InstDeadWtEval)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.MinElevation)
            </td>
            <td>
                @Html.EditorFor(model => model.MinElevation)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.MaxElevation)
            </td>
            <td>
                @Html.EditorFor(model => model.MaxElevation)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.PTNameLocation)
            </td>
            <td class="medium">
                @Html.EditorFor(model => model.PTNameLocation)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.PTRecordingCharts)
            </td>
            <td>
                @*@Html.CheckBoxFor(model => model.PTRecordingCharts)*@
                <div >
                    @Html.RadioButtonFor(model => model.PTRecordingCharts, "true") Yes
                    @Html.RadioButtonFor(model => model.PTRecordingCharts, "false") No
                </div>
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.PTInstCalibrated)
            </td>
            <td>
                @*@Html.CheckBoxFor(model => model.PTInstCalibrated)*@
                <div>
                    @Html.RadioButtonFor(model => model.PTInstCalibrated, "true") Yes
                    @Html.RadioButtonFor(model => model.PTInstCalibrated, "false") No
                </div>

            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.PTOperatorName)
            </td>
            <td class="medium">
                @Html.EditorFor(model => model.PTOperatorName)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.PTPersonResponsible)
            </td>
            <td class="medium">
                @Html.EditorFor(model => model.PTPersonResponsible)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.PTTestCompany)
            </td>
            <td class="medium">
                @Html.EditorFor(model => model.PTTestCompany)
            </td>
        </tr>
    </table>

    <p>
        <input type="submit" value="Save" />
    </p>
}

@Html.ActionLink("Back to Station Details", "Details",new { id = Model.PipelineID }, htmlAttributes: new { @class = "linkbutton" })

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
