@model PipelineFeatureList.Models.DocumentRecord

@{
    ViewBag.Title = "Edit Document Record";
}

<h2>Edit Document Record</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>EditDocumentRecord</legend>

        <h1>
            Edit Document for Station @ViewBag.PipelineItem
        </h1>

        @Html.HiddenFor(model => model.PipelineID)
        @Html.HiddenFor(model => model.DocumentRecordID)

        <table>
            <tr>
                <td>
                    @Html.LabelFor(model => model.RecordIDName)
                </td>
                <td>
                    @Html.EditorFor(model => model.RecordIDName)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.DocumentTypeID, "DocumentType")
                </td>
                <td>
                    @Html.DropDownList("DocumentTypeID", "- Select a Document Type -")
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Filename)
                </td>
                <td>
                    @Html.EditorFor(model => model.Filename)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.DrawingNumber)
                </td>
                <td>
                    @Html.EditorFor(model => model.DrawingNumber)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.RevisionNumber)
                </td>
                <td>
                    @Html.EditorFor(model => model.RevisionNumber)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Page)
                </td>
                <td>
                    @Html.EditorFor(model => model.Page)
                </td>
            </tr>
        </table>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

@Html.ActionLink("Back to Station Details", "Details",new { id = Model.PipelineID }, htmlAttributes: new { @class = "linkbutton" })

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
