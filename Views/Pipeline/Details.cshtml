@model PipelineFeatureList.Models.Pipeline

@{
    ViewBag.Title = "Station Details";
}

@if (ViewData["Reviewed"] == "true")
{
    @Html.ActionLink("Delivered", "Delivered", new { id = Model.PipelineID }, htmlAttributes: new { @class = "linkbutton" })
}
@if (ViewData["Delivered"] == "true")
{
    @Html.ActionLink("Client Accepted", "Client Accepted", new { id = Model.PipelineID }, htmlAttributes: new { @class = "linkbutton" })
}
@if (ViewData["Delivered"] == "true" && ViewData["accept"] == "true")
{
    @Html.ActionLink("Default Client Acceptance", "Index", new { id = Model.PipelineID }, htmlAttributes: new { @class = "linkbutton" })
}

