@model IEnumerable<PipelineFeatureList.Models.PipeType>

    @{
        ViewBag.Title = "Feature Types";
    }

    <h2>Feature Types</h2>

    <p>
        @Html.ActionLink("Create New", "Create", null, htmlAttributes: new { @class = "linkbutton" })
        @Html.ActionLink("Back to Admin", "Index", "Admin", null, htmlAttributes: new { @class = "linkbutton" })
    </p>
    <table>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Feature)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PipeTypeItem)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.RatingType)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)

        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Feature.FeatureItem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PipeTypeItem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RatingType)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.PipeTypeID }, htmlAttributes: new { @class = "linkbutton" })
                @Html.ActionLink("Details", "Details", new { id = item.PipeTypeID }, htmlAttributes: new { @class = "linkbutton" })
                @Html.ActionLink("Delete", "Delete", new { id = item.PipeTypeID }, htmlAttributes: new { @class = "linkbutton" })
            </td>
        </tr>
        }
    </table>
    <div>
        @Html.ActionLink("Back to Admin", "Index", "Admin", null, htmlAttributes: new { @class = "linkbutton" })
    </div>

