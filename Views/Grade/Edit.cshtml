                @Html.HiddenFor(model => model.GradeID)

                <div class="editor-label">
                    @Html.LabelFor(model => model.GradeItem)
                </div>
            </td>
            <td>
                <div class="wide">
                    @Html.EditorFor(model => model.GradeItem)
